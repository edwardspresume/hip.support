---
import MainNavToggleButton from './MainNavToggleButton.astro';
---

<header>
    <h4>Menu</h4>

    <MainNavToggleButton
        icon_name='ion:close-round'
        selector_name='close_main_nav_btn'
        aria_label='Close main navigation menu'
        icon_size='22'
    />
</header>

<style lang='scss'>
    @use '/src/scss/abstracts/' as *;

    header {
        display: flex;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        justify-content: space-between;
        border-bottom: 1px solid rgb(255, 255, 255, 0.161);
    }

    h4 {
        font-size: 2.5rem;
        font-weight: bold;
        color: transparent;
        -webkit-background-clip: text;
        background-clip: text;
        background-image: linear-gradient(45deg, #0077ff 30%, #ff0000 70%);
    }

    @media (min-width: $dt) {
        header {
            display: none;
        }
    }
</style>
