---
// I18next
import { t } from 'i18next';

// Nav components
import SubMenu from './SubMenu.astro';
import SubMenuBtn from './SubMenuBtn.astro';

// Props
export interface Props {
    data_name: string;
    display_name: string;
}

const { data_name, display_name } = Astro.props;
---

<li class='has_submenu'>
    <SubMenuBtn
        button_display_name={t(`navigation:main_tabs.${display_name}`)}
        button_data_name={data_name}
    />

    <SubMenu submenu_data_name={data_name} />
</li>

<style lang='scss' is:global>
    @use '/src/scss/abstracts/' as *;

    @media (max-width: $mb) {
        .has_submenu.submenu_active {
            border-radius: 7px;
            background: #111;
        }
    }
</style>
