---
export interface Props {
    canonical_url: URL;
    current_page_meta_title: string;
    current_page_meta_description: string;
}

const {
    canonical_url,
    current_page_meta_title,
    current_page_meta_description,
} = Astro.props;

const social_link_image = 'https://hip.support/haiti.png';
---

<meta charset='UTF-8' />

<meta name='language' content='English' />

<meta name='robots' content='index, follow' />

<meta http-equiv='X-UA-Compatible' content='IE=edge' />

<meta name='viewport' content='width=device-width, initial-scale=1.0' />

<meta name='title' content={current_page_meta_title} />

<meta name='description' content={current_page_meta_description} />

<meta name='generator' content={Astro.generator} />

<meta
    name='keywords'
    content='HIP, HAITI IMMIGRATION PROJECT, non-profit, Free, USCIS, application, assistance'
/>

<!-- Open Graph / Facebook -->
<meta property='og:type' content='website' />
<meta property='og:url' content={canonical_url} />
<meta property='og:title' content={current_page_meta_title} />
<meta property='og:description' content={current_page_meta_description} />
<meta property='og:image' content={social_link_image} />

<!-- Twitter -->
<meta property='twitter:card' content='summary_large_image' />
<meta property='twitter:url' content={canonical_url} />
<meta property='twitter:title' content={current_page_meta_title} />
<meta property='twitter:description' content={current_page_meta_description} />
<meta property='twitter:image' content={social_link_image} />
